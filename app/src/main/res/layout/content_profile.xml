<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.devfest.its.its_devfest.Profile"
    tools:showIn="@layout/activity_profile">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/tasks_details_margin_text"
            android:layout_marginLeft="@dimen/tasks_details_margin_text"
            android:layout_marginRight="@dimen/tasks_details_margin_text">

            <android.support.v7.widget.CardView
                android:layout_marginTop="30dp"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/md_keylines"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginRight="@dimen/md_keylines"
                android:foreground="?attr/selectableItemBackground"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/tv_repas_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="5dp"
                android:id="@+id/card_view_2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/md_keylines"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginRight="@dimen/md_keylines"
                android:foreground="?attr/selectableItemBackground"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/card_view">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/Profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:drawableLeft="@drawable/post"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/tv_repas_detail_duree_cuisson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Profile"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:drawableLeft="@drawable/post"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="5dp"
                android:id="@+id/card_view_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/md_keylines"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginRight="@dimen/md_keylines"
                android:foreground="?attr/selectableItemBackground"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/card_view_2">

                <TextView
                    android:id="@+id/detaille"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="5dp"
                android:id="@+id/card_view_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/md_keylines"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginRight="@dimen/md_keylines"
                android:foreground="?attr/selectableItemBackground"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/card_view_3">

                <TextView
                    android:id="@+id/tv_repas_detail_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

            </android.support.v7.widget.CardView>


        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>
